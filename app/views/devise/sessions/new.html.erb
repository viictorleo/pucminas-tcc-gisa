
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field w-full">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "w-full", autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="field w-full">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "w-full", autocomplete: "current-password" %>
  </div>
